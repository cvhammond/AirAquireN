// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sensor {
  id String @id
  type String
  currentLocation String
  sessions Session[]
}

model Session {
  id Int @id @default(autoincrement())
  sensor Sensor @relation(fields: [sensorId], references: [id])
  sensorId String
  location String 
  timeSeries DataPoint[]
}

model DataPoint {
  time DateTime @unique @default(now())
  session Session @relation(fields: [sessionId], references: [id])
  sessionId Int
  temperature Decimal @db.Decimal(4, 2)
  humidity Decimal @db.Decimal(4, 2)
  voc Int
  co2 Int
  ch2o Int
  o3 Int
  pm1 Int
  pm25 Int
  pm10 Int
  noise Decimal @db.Decimal(4, 2)
  uptime Int
}


